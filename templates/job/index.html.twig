{% extends 'base.html.twig' %}

{% block title %}Job index{% endblock %}

{% block body %}
    <h1>Job index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Customer_id</th>
                <th>Salesman_id</th>
                <th>Description</th>
                <th>Fan</th>
                <th>Job_cost</th>
                <th>Rate</th>
                <th>Sale_date</th>
                <th>Install_date</th>
                <th>Completion_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.customerId }}</td>
                <td>{{ job.salesmanId }}</td>
                <td>{{ job.description }}</td>
                <td>{{ job.fan }}</td>
                <td>{{ job.jobCost }}</td>
                <td>{{ job.rate }}</td>
                <td>{{ job.saleDate ? job.saleDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.installDate ? job.installDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ job.completionDate ? job.completionDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Create new</a>
{% endblock %}
